<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="user_edit_font">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="grid_user_info" parent="user_edit_font">
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="user_edit_margin" parent="user_edit_font">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>

    <style name="list_0_height">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="weight_1_height" parent="list_0_height">
        <item name="android:layout_weight">1</item>
    </style>

    <style name="list_style" parent="weight_1_height">
       <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="list_title" parent="weight_1_height">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="list_content" parent="weight_1_height">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray_content</item>
        <item name="android:layout_weight">2</item>
    </style>

    <style name="list_0_width">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="weight_1_width" parent="list_0_width">
        <item name="android:layout_weight">1</item>
    </style>

    <style name="list_img">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>
